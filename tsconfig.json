{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "lib": ["ESNext"]
  },
  "exclude": [
    "nex_frontend",
    "scripts"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}