{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "lib": ["ESNext"]
    },
    "exclude": ["scripts", "build"],
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}
